# Set shut down, restart and locking features
bindsym Ctrl+Mod1+Delete mode "$mode_system"
# bindsym $mod+0 mode ""
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (Shift+r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id loginctl lock-session, mode "default"
    # bindsym l exec --no-startup-id i3lock --fuzzy, mode "default"

    bindsym s exec --no-startup-id systemctl suspend-then-hibernate, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym Shift+r exec --no-startup-id reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


